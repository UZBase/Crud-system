
{{#if categories.length}}
  <div class="row">
    {{#each categories}}
      <div class="col-3">
        <div class="card">
          <img src="/images/{{icon}}" class="card-img-top" alt="{{name}}" />
          <div class="card-body">
            <h5 class="card-title"><a href="/categories/{{id}}">{{name}}</a></h5>
          </div>
          <div class="d-flex justify-content-between">
            <a href="/category/edit/{{id}}">Edit</a>
            <a href="/category/delete/{{id}}">Delete</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h2>Category is empty</h2>
{{/if}}